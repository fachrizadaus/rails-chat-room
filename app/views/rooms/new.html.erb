<%= simple_form_for @room, html: { class: 'form-horizontal' } do |form| %>
  <div class="card mt-5">
    <div class="card-header d-flex flex-row justify-content-between align-items-center">
      <h3>Create Chat Room</h3>
      <%= link_to root_path, class: 'btn btn-sm btn-outline-secondary rounded-lg' do %>
        <i class="las la-arrow-left"></i> Back to Home
      <% end %>
    </div>
    <div class="card-body">
      <div class="form-group row">
        <%= form.label :name, "Room Name", class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.input :name, input_html: { class: 'form-control' }, label: false %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit "Save", class: 'btn btn-success px-5' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
